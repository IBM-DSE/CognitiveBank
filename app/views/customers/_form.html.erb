<%= form_for @customer do |form| %>
    
    <% if @customer.errors.any? %>
        <div id="error_explanation">
          <div class="col-md-2"></div><div class="col-md-10">
            <div class="alert alert-danger">
              <h4><%= @customer.errors.messages.length %> Errors prevented this Customer from being created:</h4>
            </div>
          </div>
        </div>
    <% end %>
    
    <% Customer.required_attributes.each do |attr| %>
        <%= render partial: 'shared/input_field', locals: { form:   form, attr: attr, required: true, model_class: Customer,
                                                            errors: @customer.errors } %>
    <% end %>
    
    <% Customer.optional_attributes.each do |attr| %>
        <%= render partial: 'shared/input_field', locals: { form:   form, attr: attr, model_class: Customer,
                                                            errors: @customer.errors } %>
    <% end %>
    
    <%= render partial: 'shared/file_field', locals: { form:   form, action: :custom_img, model_class: Customer,
                                                       errors: @customer.errors } %>
    
    <div class="center">
      <%= form.submit class: 'btn btn-lg btn-primary' %>
    </div>
<% end %>
