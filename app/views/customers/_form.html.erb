<div class="container">

  <div class="row"><%= render 'shared/x_admin' %></div>

  <%= form_for @customer do |f| %>
      <% Customer.required_attributes.each do |attr| %>
          <%= render partial: 'shared/text_field', locals: {f: f, action: attr, required: true, model_class: Customer,
                                                            errors: @customer.errors.messages[attr]} %>
      <% end %>
      <% Customer.optional_attributes.each do |attr| %>
          <%= render partial: 'shared/text_field', locals: {f: f, action: attr, model_class: Customer,
                                                            errors: @customer.errors.messages[attr]} %>
      <% end %>
      <%= f.submit class: 'btn btn-lg btn-primary' %>
  <% end %>
</div>