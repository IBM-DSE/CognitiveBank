<%= form_for @customer do |f| %>

    <% if @customer.errors.any? %>
        <div id="error_explanation">
          <div class="col-md-2"></div><div class="col-md-10">
          <div class="alert alert-danger">
            <h4><%= @customer.errors.messages.length %> Errors prevented this Customer from being created:</h4>
          </div>
        </div>
        </div>
    <% end %>

    <% Customer.required_attributes.each do |attr| %>
        <%= render partial: 'shared/input_field', locals: { f:      f, action: attr, required: true, model_class: Customer,
                                                            errors: @customer.errors.messages[attr]} %>
    <% end %>
    <% Customer.optional_attributes.each do |attr| %>
        <%= render partial: 'shared/input_field', locals: { f:      f, action: attr, model_class: Customer,
                                                            errors: @customer.errors.messages[attr]} %>
    <% end %>
    <div class="center">
      <%= f.submit class: 'btn btn-lg btn-primary' %>
    </div>
<% end %>
