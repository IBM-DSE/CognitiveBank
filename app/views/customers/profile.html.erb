<h1>Profile</h1>

<div class="container">
  <% if logged_in? %>

      <h3><%= current_user.name %>'s Profile:</h3>
      <br>
      
      <table class="table">
        <tr>
          <td>
            <div>
              <%= render partial: 'summary' %>
            </div>
          </td>

          <td>
            
            <% if @twitter %>
                <div>
                  <h4>Twitter Profile:</h4>
                  <p><strong>Twitter Username: </strong> <%= @twitter.username %>43253</p>
                  <%= render partial: 'layouts/display_hash', 
                             locals: { hash: @twitter.attributes.slice('personality', 'values', 'needs') } %>
                </div>
            <% end %>

            <br><br>
            
            <% if @customer.churn_prediction %>
                <div>
                  <h4>Customer Churn:</h4>
                  <p><strong><%= Customer.human_attribute_name :churn_prediction %>: </strong><%= @customer.churn_prediction.to_s %></p>
                  <p><strong><%= Customer.human_attribute_name :churn_probability %>: </strong><%= @customer.churn_probability.to_s %></p>
                  <p><strong>Last Scoring Call: </strong><%= @customer.updated_at %></p>
                  <!--%= render partial: 'layouts/display_hash', locals: { hash: @churn_result.to_h } %>-->
                </div>
            <% end %>
            
          </td>
          
        </tr>
      </table>
      
  <% end %>
</div>
